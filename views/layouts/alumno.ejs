		<!--SCRIPTS-->
		<script src="/js/dependencies/sails.io.js"></script>
		<script src="/js/vendor/jquery.js"></script>
		<script src="/js/foundation.min.js"></script>
		<!--SCRIPTS END-->
		<script>

		// Expresion regular para validar matriculas
		$(document)
		.foundation({
			abide : {
				live_validate : true,
				focus_on_invalid : true,
				error_labels: true,
				timeout : 1000,
				patterns: {
					matricula: /^(2005|2006|2007|2008|2009|2010|2011|2012|2013|2014)\d{5}$/,
				}
			}
		});
		</script>
		
	</body>
