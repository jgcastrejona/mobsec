<!-- Login para Admin -->
<div class="row">
	<div class="large-6 columns large-centered">

		<% if(flash && flash.err) { %>
		<% Object.keys(flash.err).forEach(function(error) { %>
		<div data-alert class="alert-box <%= flash.type %>">
			<%- JSON.stringify(flash.err[error])%>
			<a href="#" class="close">&times;</a>
		</div>
		<% }) %>
		<% } %>
		
		<form action="/admin/login" method="post" data-abide>
			<h1>Login</h1>
			<div class="row">
				<div class="small-4 columns">
					<label class="right inline">Usuario:</label>
				</div>
				<div class="small-8 columns">
					<!-- Campo Usuario -->
					<input name="usuario" type="text" required placeholder="Usuario" />
					<!-- En caso de error validacion se despliega el sig mensaje -->
					<small class="error">Este campo no puede estar vacio</small>
				</div>
			</div>

			<div class="row">
				<div class="small-4 columns">
					<label class="right inline">Password:</label>
				</div>

				<div class="small-8 columns">
					<!-- Campo password -->
					<input type="password" name="password" required placeholder="*******"/>
					<!-- En caso de error validacion se despliega el sig mensaje -->
					<small class="error">Este campo no puede estar vacio</small>
				</div>
			</div>
			<div class="row">
				<div class="large 12 columns">
					<input type="submit" value="Entrar" class="button right"/>
				</div>
			</div>

		</form>
	</div>
</div>